@page
@model OnlineStore.Pages.Home.IndexModel
@using Microsoft.AspNetCore.Identity
@using DAL.Data.Entities
@inject UserManager<ApplicationUser> UserManager
@inject IStringLocalizer<IndexModel> localizer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@{
    var cus = await UserManager.GetUserAsync(HttpContext.User);
}

@section Styles{
    <link href="~/css/client/home.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/js/client/home.js" rel="stylesheet" asp-append-version="true"></script>
    <script>
        home.init();
    </script>
}
@if (cus != null)
{
    <input data-customerid="@cus.Id" id="data-cus-hidden-index" hidden />
}
<!-- Slideshow  -->
<div class="main-slider" id="home">
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-3 col-xs-12 banner-left hidden-xs"><img src="~/images/client/layout/banner-left.jpg" alt="banner"></div>
            <div class="col-sm-9 col-md-9 col-lg-9 col-xs-12 jtv-slideshow">
                <div id="jtv-slideshow">
                    <div id='rev_slider_4_wrapper' class='rev_slider_wrapper fullwidthbanner-container'>
                        <div id='rev_slider_4' class='rev_slider fullwidthabanner'>
                            <ul>
                                <li data-transition='fade' data-slotamount='7' data-masterspeed='1000' data-thumb=''>
                                    <a target="_blank" asp-page="/Product/Detail" asp-route-id="14">
                                        <img class="img-slideshow" src='~/images/client/layout/slider/banelocmonileiphone.jpg' data-bgposition='left top' data-bgfit='cover' data-bgrepeat='no-repeat' alt="banner" />
                                    </a>
                                </li>
                                <li data-transition='fade' data-slotamount='7' data-masterspeed='1000' data-thumb=''>
                                    <a target="_blank" asp-page="/Product/Detail" asp-route-id="6">
                                        <img class="img-slideshow" src='~/images/client/layout/slider/banerlocmonile5.jpg' data-bgposition='left top' data-bgfit='cover' data-bgrepeat='no-repeat' alt="banner" />
                                    </a>
                                </li>
                                <li data-transition='fade' data-slotamount='7' data-masterspeed='1000' data-thumb=''>
                                    <a target="_blank" asp-page="/Product/Detail" asp-route-id="26">
                                        <img class="img-slideshow" src='~/images/client/layout/slider/banerlocmonile1.jpg' data-bgposition='left top' data-bgfit='cover' data-bgrepeat='no-repeat' alt="banner" />
                                    </a>
                                </li>
                            </ul>
                            <div class="tp-bannertimer"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- service section -->
<div class="jtv-service-area">
    <div class="container">
        <div class="row">
            <div class="col col-md-3 col-sm-6 col-xs-12">
